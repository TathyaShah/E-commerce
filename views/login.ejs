<% include ./partials/header.ejs %>
<div
    class="w-full h-screen bg-no-repeat bg-center bg-cover bg-[url('/images/flat-mountains.svg')] flex items-center justify-center">
    <div class="bg-zinc-100 w-[28vw] h-[60vh] px-12 py-10 rounded-[30px]">
        <h1 class="text-3xl mb-3 tracking-tight text-center leading-none">Welcome to E-commerce</h1>
        <form action="/login" method="post">
            <input class="border-2 mb-2 rounded-md block px-3 py-2 mt-2 w-full" type="text" name="email"
                placeholder="Email">
            <input class="border-2 mb-2 rounded-md block px-3 py-2 mt-2 w-full" type="password" name="password"
                placeholder="Password">
            <input
                class="border-2 block px-3 py-2 mt-2 w-full bg-red-600 text-white rounded-full cursor-pointer hover:bg-red-400"
                type="submit" value="Login">
        </form>
        <a href="/auth/google"
            class="mt-3 px-4 py-2 border flex items-center justify-center gap-4 border-slate-200 dark:border-slate-700 rounded-lg text-slate-700 hover:border-slate-400 hover:text-slate-900 hover:shadow transition duration-150">
            <img class="w-6 h-6" src="https://www.svgrepo.com/show/475656/google-color.svg" loading="lazy"
                alt="google logo">
            <span>Login with Google</span>
        </a>
        <a href="/register" class="w-full text-center inline-block mt-7">Don't have an account?</a>
    </div>
</div>
<% include ./partials/footer.ejs %>